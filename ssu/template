# Template file for 'ssu'
pkgname=ssu
version=0.3.2
revision=1
short_desc="Extremely simple su utility"
maintainer="aniruddhgutta <aniruddhgutta@disroot.org>"
license="GPL-3.0"
homepage="https://github.com/illiliti/ssu"
distfiles="https://github.com/illiliti/ssu/archive/refs/tags/${version}.tar.gz"
checksum=949bcfc5bd1a9908d1c9ff754bd16d092c9dcfde36e4f5d8785eb47d5baf1cec
nofixperms=yes

do_build() {
    make CC=$CC
}

do_install() {
  vbin ssu
  chmod 4755 "${DESTDIR}/usr/bin/ssu"
  vinstall README.md 644 usr/share/doc/$pkgname
  vman ssu.1 1
  vlicense LICENSE
}
